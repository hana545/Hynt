<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/white"
   >

    <RelativeLayout
        android:id="@+id/add_workhours_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingVertical="5dp">


        <LinearLayout
            android:id="@+id/monday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">
            <TextView
                android:id="@+id/monday_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/monday"
                android:letterSpacing="0.15"
                android:padding="10dp"
                android:textSize="15sp"
                android:textColor="@color/black_blue"
                android:fontFamily="@font/auttera"
                android:textStyle="bold"
                android:layout_weight="0.7"
                />
            <TextView
                android:id="@+id/monday_hours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/empty_workhours"
                android:layout_weight="0.2"
                android:textAlignment="center" />
            <ImageButton
                android:id="@+id/btn_edit_monday_hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:backgroundTint="@color/transparent"
                android:src="@drawable/ic_edit"/>

            <TextView
                android:id="@+id/monday1_hour_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/monday1_hour_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/tuesday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/monday"
            android:weightSum="1">
            <TextView
                android:id="@+id/tuesday_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tuesday"
                android:letterSpacing="0.15"
                android:padding="10dp"
                android:textSize="15sp"
                android:textColor="@color/black_blue"
                android:fontFamily="@font/auttera"
                android:textStyle="bold"
                android:layout_weight="0.7"
                />
            <TextView
                android:id="@+id/tuesday_hours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/empty_workhours"
                android:layout_weight="0.2"
                android:textAlignment="center" />
            <ImageButton
                android:id="@+id/btn_edit_tuesday_hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:backgroundTint="@color/transparent"
                android:src="@drawable/ic_edit"/>

            <TextView
                android:id="@+id/tuesday1_hour_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/tuesday1_hour_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/wednesday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/tuesday"
            android:weightSum="1">
            <TextView
                android:id="@+id/wednesday_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wednesday"
                android:letterSpacing="0.15"
                android:padding="10dp"
                android:textSize="15sp"
                android:textColor="@color/black_blue"
                android:fontFamily="@font/auttera"
                android:textStyle="bold"
                android:layout_weight="0.7"
                />
            <TextView
                android:id="@+id/wednesday_hours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/empty_workhours"
                android:layout_weight="0.2"
                android:textAlignment="center" />
            <ImageButton
                android:id="@+id/btn_edit_wednesday_hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:backgroundTint="@color/transparent"
                android:src="@drawable/ic_edit"/>

            <TextView
                android:id="@+id/wednesday1_hour_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/wednesday1_hour_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/thursday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/wednesday"
            android:weightSum="1">

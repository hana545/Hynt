                android:padding="10dp"
                android:textSize="15sp"
                android:textColor="@color/black_blue"
                android:fontFamily="@font/auttera"
                android:textStyle="bold"
                android:layout_weight="0.7"
                />
            <TextView
                android:id="@+id/thursday_hours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/empty_workhours"
                android:layout_weight="0.2"
                android:textAlignment="center" />
            <ImageButton
                android:id="@+id/btn_edit_thursday_hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:backgroundTint="@color/transparent"
                android:src="@drawable/ic_edit"/>

            <TextView
                android:id="@+id/thursday1_hour_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/thursday1_hour_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/friday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/thursday"
            android:weightSum="1">
            <TextView
                android:id="@+id/friday_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

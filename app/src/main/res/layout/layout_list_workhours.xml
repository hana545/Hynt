                android:letterSpacing="0.15"
                android:padding="10dp"
                android:textSize="15sp"
                android:textColor="@color/black_blue"
                android:fontFamily="@font/auttera"
                android:textStyle="bold"
                android:layout_weight="0.7"
                />
            <TextView

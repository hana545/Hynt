<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/text_light"
    tools:context=".UserMyPlacesFragment">

    <TextView
        android:id="@+id/fragment_name_places"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/myPlaces_title"
        android:textSize="25sp"
        android:textAlignment="center"
        android:fontFamily="@font/auttera">
    </TextView>
    <LinearLayout
        android:id="@+id/fragment_legend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/fragment_name_places"
        android:layout_marginTop="10dp"
        android:gravity="center">
        <TextView
            android:id="@+id/fil_approved"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#DAFBD1"
            android:padding="10dp"
            android:text="@string/myPlaces_approved"/>
        <TextView
            android:id="@+id/fil_pending"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#B8DEFF"
            android:padding="10dp"
            android:text="@string/myPlaces_pending"/>
        <TextView
            android:id="@+id/fil_notapproved"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#F8D8D8"
            android:padding="10dp"
            android:text="@string/myPlaces_not_approved"/>
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fragment_btn_add_new_place"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:src="@android:drawable/ic_input_add" />


    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_legend"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="25dp"
        app:dividerColor="@color/blue_dark"
        />

    <TextView
        android:id="@+id/fragment_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/no_myPlaces_info"
        android:textSize="25sp"
        android:textStyle="italic"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/divider"
        android:visibility="gone">
    </TextView>

    <ProgressBar
        android:id="@+id/progress_bar_UserPlaces"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider"
        android:layout_centerInParent="true"
        android:layout_marginVertical="50dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/place_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:clipToPadding="false"
        android:paddingBottom="80dp"
        />
    <com.reddit.indicatorfastscroll.FastScrollerView
        android:id="@+id/fastscroller"
        android:layout_width="20dp"
        android:layout_height="match_parent"
        android:layout_below="@+id/divider"
        android:layout_marginTop="10dp"
        android:background="@color/black_blue_low_opacity"
        android:textColor="@color/blue_light"
        android:layout_alignParentRight="true"
        />
    <com.reddit.indicatorfastscroll.FastScrollerThumbView
        android:id="@+id/fastscroller_thumb"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/fastscroller"
        android:layout_alignTop="@+id/fastscroller"
        android:layout_marginEnd="16dp"
        android:layout_toStartOf="@+id/fastscroller"
        />

</RelativeLayout>
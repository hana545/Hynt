<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:openDrawer="right">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.mapbox.mapboxsdk.maps.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            app:mapbox_cameraTargetLat="45.830"
            app:mapbox_cameraTargetLng= "16.1345"
            app:mapbox_cameraZoom="16" >
        </com.mapbox.mapboxsdk.maps.MapView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/float_btn_back_to_camera_tracking_mode"
            android:layout_width="wrap_content"
            android:layout_height="149dp"
            android:backgroundTint="@color/black_blue"
            app:layout_constraintBottom_toTopOf="@+id/float_btn_search_filter_locations"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.99"
            app:layout_constraintHorizontal_bias="0.95"
            android:padding="20dp"
            app:srcCompat="@android:drawable/ic_dialog_map" />


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/float_btn_search_filter_locations"
            android:layout_width="wrap_content"
            android:layout_height="149dp"
            android:backgroundTint="@color/black_blue"
            app:layout_constraintBottom_toTopOf="@+id/btn_hint"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.95"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.99"
            app:srcCompat= "@drawable/ic_filter_foreground"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btn_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/text_light"
            app:layout_constraintBottom_toTopOf="@+id/lokacije"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.95"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.99"
            app:srcCompat= "@drawable/ic_hint_bulb"/>

        <HorizontalScrollView
            android:id="@+id/lokacije"
            android:layout_width="match_parent"
            android:layout_height="116dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1"
            android:background="@color/black_blue">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Here"
                    android:textColor="@color/white"
                    android:padding="15dp">

                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="will"
                    android:textColor="@color/white"
                    android:padding="15dp">

                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="be"
                    android:textColor="@color/white"
                    android:padding="15dp">

                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="listed"
                    android:textColor="@color/white"
                    android:padding="15dp">

                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="a"
                    android:textColor="@color/white"
                    android:padding="15dp">

                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="locations"
                    android:textColor="@color/white"
                    android:padding="15dp">

                </TextView>
                <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="near"
                    android:textColor="@color/white"
                android:padding="15dp">


                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="the"
                    android:textColor="@color/white"
                    android:padding="15dp">

                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="user"
                    android:textColor="@color/white"
                    android:padding="15dp">

                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="with"
                    android:textColor="@color/white"
                    android:padding="15dp">

                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="applied"
                    android:textColor="@color/white"
                    android:padding="15dp">

                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="filter"
                    android:textColor="@color/white"
                    android:padding="15dp">

                </TextView>

            </LinearLayout>
        </HorizontalScrollView>



    </androidx.constraintlayout.widget.ConstraintLayout>
    <!-- Custom Navigation Drawer Start -->
    <LinearLayout
        android:id="@+id/navigation_layout"
        android:layout_width="@dimen/navigation_drawer_width"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:background="@color/blue_light"
        android:orientation="vertical">

        <TextView
            android:id="@+id/main_img_logo"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:fontFamily="@font/auttera"
            android:textAlignment="center"
            android:textSize="50dp"
            android:gravity="center_horizontal" />


        <include layout="@layout/filter"/>

    </LinearLayout>
    <!-- Custom Navigation Drawer End -->
</androidx.drawerlayout.widget.DrawerLayout>
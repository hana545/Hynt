<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/place_card"
    android:layout_width="wrap_content"
    android:layout_height="180dp"
    android:layout_marginHorizontal="3dp"
    android:layout_marginVertical="6dp"
    app:cardElevation="1dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:backgroundTint="@color/white"
        android:padding="5dp">

        <LinearLayout
            android:id="@+id/place_card_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="2dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/place_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingHorizontal="5dp"/>
            <ImageView
                android:padding="10dp"
                android:layout_marginStart="10dp"
                android:id="@+id/workhour_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_open_label"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/place_additional_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/place_card_header"
            android:layout_marginVertical="2dp"
            android:padding="5dp"
            android:weightSum="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/category_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_category"/>

                <TextView
                    android:id="@+id/place_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:fontFamily="sans-serif-thin"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/place_review_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:layout_below="@+id/place_card_header"
                android:paddingHorizontal="10dp">

                <ImageView
                    android:id="@+id/star1"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_star_review_off"/>
                <ImageView
                    android:id="@+id/star2"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_star_review_off"/>
                <ImageView
                    android:id="@+id/star3"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_star_review_off"/>
                <ImageView
                    android:id="@+id/star4"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_star_review_off"/>
                <ImageView
                    android:id="@+id/star5"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_star_review_off"/>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/place_card_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/place_additional_info"
            android:layout_marginVertical="2dp"
            android:padding="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/address_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_place_info_address"/>

            <TextView
                android:id="@+id/place_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="sans-serif-thin"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>


    </RelativeLayout>

</androidx.cardview.widget.CardView>